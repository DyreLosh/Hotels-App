<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingEnd="40dp"
    app:contentPaddingRight="1dp">


    <ImageView
        android:id="@+id/hotelNumberImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/hotel_card_image" />


    <TextView
        android:id="@+id/nameNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Меркурий" />


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="25dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="@color/rating_bar"
        android:rating="4.9"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:stepSize="0.1" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/background_item_text"
        app:cardCornerRadius="5dp"
        app:contentPadding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHotel">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_bath" />

        <TextView
            android:id="@+id/ratingHotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/bathroom_text_item"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameCityText"
            tools:text="Bathroom" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/background_item_text"
        app:cardCornerRadius="5dp"
        app:contentPadding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHotel">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/wifi_text"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameCityText" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/addresHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        tools:text="Саранск, Большевитская 58" />

    <TextView
        android:id="@+id/priceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="120dp"
        android:paddingStart="0dp"
        android:paddingEnd="20dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        tools:text="145$/ночь" />

    <TextView
        android:id="@+id/ratingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginTop="39dp"
        android:textSize="11sp"
        tools:text="4.9(808)" />

</androidx.cardview.widget.CardView>