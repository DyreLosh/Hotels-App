<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPaddingEnd="40dp"
    app:contentPaddingRight="1dp"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="12dp"
    app:cardCornerRadius="10dp">


    <ImageView
        android:id="@+id/hotelNumberImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hotel_card_image"
        android:padding = "10dp"/>


    <TextView
        android:id="@+id/nameNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Меркурий"
        android:layout_marginTop="10dp"
        android:layout_marginStart="150dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"/>


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="25dp"
        android:progressTint="@color/rating_bar"
        android:isIndicator="true"
        android:stepSize="0.1"
        android:numStars="5"
        android:rating="4.9"
        android:scaleX="0.3"
        android:scaleY="0.3" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentPadding="2dp"
        android:layout_marginTop="63dp"
        android:layout_marginStart="150dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/background_item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHotel">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_bath"/>

        <TextView
            android:id="@+id/ratingHotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameCityText"
            tools:text="Bathroom"
            android:text="@string/bathroom_text_item"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        app:contentPadding="2dp"
        android:layout_marginStart="240dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/background_item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHotel">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameCityText"
            android:text="@string/wifi_text"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/addresHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Саранск, Большевитская 58"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/priceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        tools:text="145$/ночь"
        android:textStyle="bold"
        android:paddingStart="0dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="270dp"/>

    <TextView
        android:id="@+id/ratingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4.9(808)"
        android:layout_marginTop="39dp"
        android:layout_marginStart="225dp"
        android:textSize="11sp"/>



</androidx.cardview.widget.CardView>